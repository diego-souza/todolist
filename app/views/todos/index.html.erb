<h1>Listing todos</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Priority</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= best_in_place todo, :content, type: :input, data: { todo_content:  todo.content } %></td>
    <td><%= best_in_place todo, :priority, type: :select, collection: priority_name_options_for_best_in_place %></td>
    <td>
      <%= form_for(todo) do |f| %>
        <%= f.hidden_field :priority, value: Todo::DONE %>
        <%= f.submit "Mark as Done" %>
      <% end %>
    </td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Remove', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Todo', new_todo_path %>
